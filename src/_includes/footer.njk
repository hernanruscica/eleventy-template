    <!-- Redes Sociales -->
    <div class="footer-socials">
      <h4>Social media</h4>      
      {% for social in site.socials %}
        <a href="{{ social.url }}" target="_blank">
            <img src="{{ site.baseUrl }}/assets/icons/socials/{{ social.icon }}-light.svg" alt="{{ social.name }} logo svg" class="footer-logo-img">
            <span> {{ social.text }}</span>
        </a>
      {% endfor %}
    </div>
    
