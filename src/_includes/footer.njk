    <!-- Información de Contacto -->
    <div class="footer-contact">
      <h4>Contact</h4>
      <p><img src="{{ site.baseUrl }}/assets/icons/phone-solid.svg" alt="telephone icon svg" class="footer-logo-img"> {{ site.client.telephone }}</p>
      <p><img src="{{ site.baseUrl }}/assets/icons/envelope-solid.svg" alt="telephone icon svg" class="footer-logo-img"> {{ site.client.email }} </p>
      <p><img src="{{ site.baseUrl }}/assets/icons/house-solid.svg" alt="telephone icon svg" class="footer-logo-img"> {{ site.client.address }} </p>
    </div>
    
  </div>
  
